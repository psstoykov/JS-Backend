<main class="create">
    <!-- Create Page (Only for logged-in users) -->
    <section id="create">
        <div class="form">
            <h2>Add Stone</h2>
            <form method="post" class="create-form">
                <input
                    type="text"
                    name="name"
                    id="name"
                    placeholder="Name"
                    value="{{stone.name}}"
                />
                <input
                    type="text"
                    name="category"
                    id="category"
                    placeholder="Category"
                    value="{{stone.category}}"
                />
                <input
                    type="text"
                    name="color"
                    id="color"
                    placeholder="Color"
                    value="{{stone.color}}"
                />
                <input
                    type="text"
                    name="imageURL"
                    id="stone-img"
                    placeholder="Image"
                    value="{{stone.imageURL}}"
                />
                <input
                    type="text"
                    name="location"
                    id="location"
                    placeholder="Location"
                    value="{{stone.location}}"
                />
                <input
                    type="text"
                    name="formula"
                    id="formula"
                    placeholder="Formula"
                    value="{{stone.formula}}"
                />
                <textarea
                    id="description"
                    placeholder="Description..."
                    name="description"
                    value="{{stone.description}}"
                ></textarea>

                <button type="submit">Create</button>
            </form>
        </div>
    </section>

</main>