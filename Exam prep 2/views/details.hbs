<section id="details-info">
    {{#with volcano}}
        <h1>Details</h1>
        <div class="volcano-image">
            <img src="{{image}}" />
        </div>

        <div class="volcano-info">
            <div class="volcano-text">
                <h1 id="name">{{name}}</h1>
                <h3 id="location">Location: {{location}}</h3>
                <p id="type">Volcano Type: {{typeVolcano}}</p>
                <p id="elevation"><span>Elevation: {{elevation}}</span></p>
                <p id="last-eruption">Year of Last Eruption:
                    {{lastEruption}}</p>
                <p id="votes">Vote's Count: {{voteList.length}}</p>
                <p id="description">{{description}}</p>
            </div>
            {{#if hasUser}}
                <div class="product-btn">
                    {{#if isAuthor}}
                        <!--Only for registered user and author of the publication -->
                        <div class="author">
                            <a href="/edit/{{_id}}" class="btn-edit">Edit</a>
                            <a
                                href="/delete/{{_id}}"
                                class="btn-delete"
                            >Delete</a>
                        </div>
                    {{else}}
                        <!-- Logged in user who has not yet vote for this volcano-->
                        <a href="/vote/{{_id}}" class="btn-vote">Vote</a>

                        <!-- Logged in user who has already vote for this volcano-->
                        <p class="vote-message">You've already voted for this
                            volcano!</p>
                    {{/if}}
                </div>
            {{/if}}
        </div>
    {{/with}}
</section>