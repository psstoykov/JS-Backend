<main class="login">
<!-- Login Page (Only for Guest users) -->
<section id="login">
    <div class="form">
        <h2>Login</h2>
        <form method="post" class="login-form">
            <input type="text" name="email" id="email" placeholder="email" {{#if error}} value="{{data.email}}"{{/if}}/>
            <input
                type="password"
                name="password"
                id="password"
                placeholder="password"
            />
            <button type="submit">Login</button>
            <p class="message">
                Not registered?
                <a href="/register">Create an account</a>
            </p>
        </form>
    </div>
</section>

</main>