<section class="form-container">
    <h2>Create Recipe</h2>
    <form method="post">
        <label for="title">Recipe Title:</label>
        <input type="text" id="title" name="title"
        {{#if recipe.title}}value="{{recipe.title}}"{{/if}} />

        <label for="description">Description:</label>
        <textarea id="description" name="description">{{#if recipe.description}}{{recipe.description}}{{/if}}</textarea>

        <label for="ingredients">Ingredients:</label>
        <textarea id="ingredients" name="ingredients">{{#if recipe.ingredients}}{{recipe.ingredients}}{{/if}}</textarea>

        <label for="instructions">Instructions:</label>
        <textarea id="instructions" name="instructions">{{#if recipe.instructions}}{{recipe.instructions}}{{/if}}</textarea>

        <label for="image">Image URL:</label>
        <input type="url" id="image" name="image"
        {{#if recipe.image}}value="{{recipe.image}}"{{/if}} />

        <button type="submit">Create Recipe</button>
    </form>
</section>